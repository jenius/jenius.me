#index

  header
    text-align: center
    margin-top: 30px

    &.out
      animation: .3s header-out
      animation-delay: .5s

    img
      max-width: 80px
      opacity: .9
      animation: 1s spin ease-out-quad

    h1
      upcase()
      margin: 1em 0
      font-size: 1.3em
      font-weight: 600
      opacity: .6

  nav ul
    inline-list: 119px
    max-width: 700px
    margin: 120px auto

    @media only screen and (max-width: 815px)
      max-width: 290px

    @media only screen and (max-width: 415px)
      max-width: 240px

    @media only screen and (max-width: 350px)
      max-width: 205px
      margin-top: 80px

    li
      text-align: center
      margin-bottom: 30px

      @media only screen and (max-width: 815px)
        &:nth-child(2n)
          margin-right: 0

      @media only screen and (max-width: 415px)
        margin-right: 70px

      @media only screen and (max-width: 350px)
        margin-right: 63px

      a
        display: block
        text-decoration: none
        transition: .1s ease

        &:active
          margin-top: 5px

      .icon
        size: 85px
        background-size: cover
        opacity: .3
        transition()

        @media only screen and (max-width: 350px)
          size: 65px

      h2
        color: white
        font-weight: 700
        font-size: 1em
        upcase()
        opacity: 0
        transition()
        margin-top: 1.6em
        border: none

        @media only screen and (max-width: 550px)
          opacity: .1
          margin-top: 1em

      &:nth-child(1)
        animation: 1s in1

        &.out
          animation: .8s out

        .icon
          background-image: url('/img/about.svg')

      &:nth-child(2)
        animation: 1.3s in2

        &.out
          animation: .8s out
          animation-delay: .1s

        .icon
          background-image: url('/img/work.svg')

      &:nth-child(3)
        animation: 1.6s in3

        &.out
          animation: .8s out
          animation-delay: .2s

        .icon
          background-image: url('/img/writing.svg')

      &:nth-child(4)
        animation: 1.9s in4

        &.out
          animation: .8s out
          animation-delay: .3s

        .icon
          background-image: url('/img/contact.svg')

      &:hover

        .icon
          opacity: .4

        h2
          opacity: .1
          margin-top: 1em
